<div class="row">
    <div class="col">
        {{# if errors }}
        {{# each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
        {{/each}}
        {{/if}}
        {{# if goodErrors }}
        {{# each goodErrors }}
        <p class="alert alert-success">{{ this.message }}</p>
        {{/each}}
        {{/if}}
    </div>
</div>
