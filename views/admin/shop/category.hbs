<div class="row">
    <div class="col">
        <a href="/admin/shop/">Shop</a><span> > </span>
        <span>{{category.name}}</span>
    </div>
</div>
<div class="row">
    <div class="col">
        {{#if errors}}
        {{#each errors}}
        <p class="alert alert-danger">{{this.msg}}</p>
        {{/each}}
        {{else if success}}
        <p class="alert alert-success">{{success.msg}}</p>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Rediger kategori</h2>
            </div>
            <div class="panel-body">
                <form method="post" action="/admin/shop/categories/{{category._id}}">
                    <div class="form-group">
                        <label>Navn: (Påkrævet)</label>
                        <input type="text" class="form-control" name="name" value="{{category.name}}" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Opdater</button>
                    </div>
                </form>
                <form class="inline-form"
                    onsubmit="return confirm('OBS! Slettes denne kategori, slettes alle tilhørende produkter også. Er du sikker på denne handling?')"
                    action="/admin/shop/categories/{{category._id}}/remove" method="POST">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i> Slet kategori</button>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <h2>Produkter</h2>
        {{#each category.products}}
        <div class="row justify-content-between products-backend">
            <div class="col">{{this.name}}</div>
            <div class="align-right col">
                <a href="/admin/shop/categories/{{../category._id}}/products/{{this._id}}" class="btn btn-primary"><i
                        class="fas fa-wrench"></i></a>
                <form class="inline-form" onsubmit="return confirm('Er du sikker på denne handling?')"
                    action="/admin/shop/categories/{{../category._id}}/products/{{this._id}}/remove" method="POST">
                    <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i></button>
                </form>
            </div>
        </div>
        {{/each}}
    </div>
</div>
<br>