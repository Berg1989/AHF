<div class="row">
    <div class="col">
        {{#if messages.errors }}
        <div class="alert alert-danger">
            {{#each messages.errors }}
            <span>{{ this.msg }}</span><br>
            {{/each}}
        </div>
        <hr>
        {{/if}}
        {{#if messages.success }}
        <p class="alert alert-success">{{ messages.success }}</p>
        <hr>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form method="POST" action="/admin/news/createevent">
            <h1 class="row">Opret ny begivenhed</h1>
            <label class="row">Overskrift</label>
            <input type="text" name="headline" class="row" value="{{inputs.headline}}">
            <label class="row">Start dato</label>
            <input type="date" name="startDate" class="row" data-provide="datepicker" data-date-format="DD/MM/YYYY" value="{{inputs.startDate}}">
            <label class="row">Slut dato</label>
            <input type="date" name="endDate" class="row" data-provide="datepicker" data-date-format="DD/MM/YYYY" value="{{inputs.endDate}}">
            <label class="row">Svarfrist</label>
            <input type="date" name="deadline" class="row" data-provide="datepicker" data-date-format="DD/MM/YYYY" value="{{inputs.deadline}}">
            <label class="row">Beskrivelse</label>
            <div class="row">
                <textarea name="body" class="col-lg-6 textarea">{{inputs.body}}</textarea>
            </div>
            <label class="row">Max deltagere</label>
            <input type="number" name="maxparticipants" class="row" value="{{inputs.maxparticipants}}">
            <label class="row">Pris</label>
            <input type="number" step="0.01" name="price" class="row" value="{{inputs.price}}">

            <button type="submit" class="btn btn-primary row">Opret</button>
        </form>
    </div>
</div>
</div>