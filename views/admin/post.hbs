<div class="row">
    <div class="col">
        {{#if messages.errors }}
        <div class="alert alert-danger">
            {{#each messages.errors }}
            <span>{{ this.msg }}</span><br>
            {{/each}}
        </div>
        <hr>
        {{/if}}
        {{#if messages.success }}
        <p class="alert alert-success">{{ messages.success }}</p>
        <hr>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-lg-6">
        <form method="POST" action="/admin/news/postedit/id={{post._id}}">
            <label class="row">Overskrift</label>
            <input name="headline" type="text" class="row" value="{{post.headline}}">

            <label class="row">Beskrivelse</label>
            <div class="row">
                <textarea name="body" class="col-lg-6 textarea">{{post.body}}</textarea>
            </div>

            <div class="form-group">
                <button type="submit" class="btn btn-primary">Gem Ã¦ndringer</button>
            </div>
        </form>
    </div>
</div>