<div class="row">
    <div class="col">
        <div class="panel panel-primary">
            {{# if errors }}
            {{# each errors }}
            <p class="alert alert-danger">{{ this.msg }}</p>
            {{/each}}
            {{/if}}
            {{# if success }}
            <p class="alert alert-success">{{ success.msg }}</p>
            {{/if}}
            <div class="panel-heading">
                <h2>Registrer ny bruger</h2>
            </div>
            <div class="panel-body">
                <form method="post" action="/admin/users">
                    <div class="form-group">
                        <label for="typeselect">Vælg en bruger type</label>
                        <select name="level" class="form-control" id="typeselect">
                            {{#select "1"}}
                            <option value="0" disabled="true">Vælg</option>
                            <option value="1">Admin</option>
                            <option value="2">Frivillig</option>
                            <option value="3">Medlem</option>
                            {{/select}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Email*</label>
                        <input type="email" class="form-control" name="email" value="{{email}}" />
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Password*</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Fornavn*</label>
                        <input type="text" class="form-control" name="firstname" value="{{firstname}}" />
                    </div>
                    <div class="form-group">
                        <label class="col-md-4">Efternavn*</label>
                        <input type="text" class="form-control" name="lastname" value="{{lastname}}" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Registrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <h2>Rediger eksisterende brugere</h2>
        <ul>
            {{# each users }}
            <div class="row justify-content-between align-items-center" style="margin-bottom:15px;">
                <div class="col">
                    <span>{{this.info.firstname}} {{this.info.lastname}}</span>
                </div>
                <div class="col">
                     <a href="/admin/users/id={{this._id}}" class="btn btn-primary">Rediger</a>
                    <button type="submit" id="{{this._id}}" onclick="deleteUser(this.id)" class="btn btn-danger">Slet</button>
                </div>
            </div>
            {{/each}}
        </ul>
    </div>
</div>

<script>
    async function deleteUser(id) {
        const res = window.confirm('Vil du slette denne bruger?');
        if (res) {
            try {
                const response = await fetch('/admin/users/id=' + id, {
                    method: 'DELETE',
                })
                location.reload(true);
            } catch (err) {
                console.log(err);
            }
        }
    };
</script>