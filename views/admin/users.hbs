<div class="row">
    <div class="col">
        {{#if errors }}
        {{#each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
        {{/each}}
        {{/if}}
        {{#if success }}
        <p class="alert alert-success">{{ success.msg }}</p>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Registrer ny bruger</h2>
            </div>
            <div class="panel-body">
                <form method="post" action="/admin/users">
                    <div class="form-group">
                        <label for="usertype">Bruger type:</label>
                        <select name="usertype" class="form-control" id="typeselect">
                            {{#select "{{usertypes._id}}"}}
                            {{#each usertypes}}
                            <option value="{{this._id}}">{{this.title}}</option>
                            {{/each}}
                            {{/select}}
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Email*</label>
                        <input type="email" class="form-control" name="email" value="{{inputs.email}}" />
                    </div>
                    <div class="form-group">
                        <label>Password*</label>
                        <input type="password" class="form-control" name="password" />
                    </div>
                    <div class="form-group">
                        <label>Fornavn*</label>
                        <input type="text" class="form-control" name="firstname" value="{{inputs.firstname}}" />
                    </div>
                    <div class="form-group">
                        <label>Efternavn*</label>
                        <input type="text" class="form-control" name="lastname" value="{{inputs.lastname}}" />
                    </div>
                    <div class="form-group">
                        <label>Funktion:</label>
                        <input type="text" class="form-control" name="func" value="{{inputs.func}}" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Registrer</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div>
        <h2>Rediger eksisterende brugere</h2>
        
        <div>
            <label>Antal medlemmer:</label>
            <label>{{userCount}}</label
        </div>

        <table cellpadding='2' style="width:100%;">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Type</th>
                    <th>Funktion</th>
                    <th>Rediger</th>
                    <th>Slet</th>
                </tr>
            </thead>
            <tbody>
                {{#each users }}
                <tr>
                    <td>{{this.info.firstname}} {{this.info.lastname}}</td>
                    <td>{{this.usertype.title}}</td>
                    <td>{{this.info.func}}</td>
                    <td><a href="/admin/users/id={{this._id}}" class="btn btn-primary"><i class="fas fa-wrench"></i></a>
                    </td>
                    <td> <button type="submit" id="{{this._id}}" onclick="deleteUser(this.id)" class="btn btn-danger"><i
                                class="fas fa-times"></i></button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    async function deleteUser(id) {
        const res = window.confirm('Vil du slette denne bruger?');
        if (res) {
            try {
                const response = await fetch('/admin/users/id=' + id, {
                    method: 'DELETE',
                })
                if (response.status === 200) location.reload(true);
            } catch (err) {
                console.log(err);
            }
        }
    };
</script>