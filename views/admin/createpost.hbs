<div class="row">
    <div class="col">
        {{#if messages.errors }}
        <div class="alert alert-danger">
            {{#each messages.errors }}
            <span>{{ this.msg }}</span><br>
            {{/each}}
        </div>
        <hr>
        {{/if}}
        {{#if messages.success }}
        <p class="alert alert-success">{{ messages.success }}</p>
        <hr>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <form method="POST" action="/admin/news/createpost">
            <div class="form-group">
                <h1 class="row">Lav nyt opslag</h1>
            </div>
            <div class="form-group">
                <label class="row">Overskrift</label>
                <input type="text" name="headline" class="row form-control" value="{{inputs.headline}}">
            </div>
            <div class="form-group">
                <label class="row">Beskrivelse</label>
                <div class="row">
                    <textarea name="body" class="col-lg-6 form-control">{{inputs.body}}</textarea>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary row">Opret</button>
            </div>
        </form>
    </div>
</div>