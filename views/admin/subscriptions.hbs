<div class="row">
    <div class="col">
        <span>Kontingenttyper</span>
    </div>
</div>
<div class="row">
    <div class="col">
        {{#if errors }}
        {{#each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
        {{/each}}
        {{/if}}
        {{#if success}}
        <p class="alert alert-success">{{ success.msg }}</p>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h1>Opret kontingent</h1>
            </div>
            <div class="panel-body">
                <form method="POST" action="/admin/subscriptions">
                    <div class="form-group">
                        <label></label>Navn (Påkrævet):</label>
                        <input type="text" class="form-control" name="name" value="{{inputs.name}}" />
                    </div>
                    <div class="form-group">
                        <label>Varighed/Betalingsfrekvens (Påkrævet):</label>
                        <input type="number" class="form-control" name="duration" value="{{inputs.duration}}"
                            placeholder="Antal måneder" />
                    </div>
                    <div class="form-group">
                        <label></label>Pris pr måned (Påkrævet):</label>
                        <input type="number" step="0.01" class="form-control" name="price" value="{{inputs.price}}"
                            placeholder="DKK" />
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Opret</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">
        <h2>Kontingenter</h2>
        <table cellpadding='2' style="width:100%;">
            <thead>
                <tr>
                    <th>Navn</th>
                    <th>Varihed</th>
                    <th>Pris</th>
                    <th>Rediger</th>
                    <th>Slet</th>
                </tr>
            </thead>
            <tbody>
                {{#each subscriptions}}
                <tr>
                    <td>{{this.name}}</td>
                    <td>{{this.duration}}</td>
                    <td>{{this.price}}</td>
                    <td><a href="/admin/subscriptions/id={{this._id}}" class="btn btn-primary"><i
                                class="fas fa-wrench"></i></a></td>
                    <td> <button type="submit" id="{{this._id}}" onclick="deleteSubscription(this.id)"
                            class="btn btn-danger"><i class="fas fa-times"></i></button></td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<script>
    async function deleteSubscription(id) {
        const res = window.confirm('Vil du slette dette kontingent?');
        if (res) {
            try {
                const response = await fetch('/admin/subscriptions/id=' + id, {
                    method: 'DELETE',
                })
                if (response.status === 200) location.reload(true);
            } catch (err) {
                console.log(err);
            }
        }
    };
</script>