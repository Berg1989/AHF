    <!-- information fields row -->
    <div class="col-lg-6">
        <form method="POST" action="/userProfiles"> 
            <div class="row">
                <label class="col-lg-3">Fornavn: </label>
                <input class="form-control col-lg-3" id="firstName" type="text" placeholder="Fornavn">
                <label class="col-lg-3">Efternavn: </label>
                <input class="form-control col-lg-3" id="lastName" type="text" placeholder="Efternavn">
            </div>

            <div class="row">
                <label class="col-lg-3">Alder: </label>
                <input class="form-control col-lg-3" id="age" type="number" placeholder="Alder" min="0">
                <label class="col-lg-3">Brugernavn: </label>
                <input class="form-control col-lg-3" id="username" type="text" placeholder="Brugernavn">
            </div>
            <div class="row">
                <label class="col-lg-3">Adresse:</label>
                <input class="form-control col-lg-3" id="address" type="text" placeholder="Adresse">
                <label class="col-lg-3">Bynavn:</label>
                <input class="form-control col-lg-3" id="cityname" type="text" placeholder="Bynavn">
            </div>

            <div class="row">
                <label class="col-lg-3">Post nr.:</label>
                <input class="form-control col-lg-3" maxlength="4" id="zipcode" type="number" placeholder="Post nr.">
                <label class="col-lg-3">FÃ¸dselsdato</label>
                <input class="form-control col-lg-3" id="birthdate" type="date">
            </div>
            <div class="row">
                <label class="col-lg-3">Tlf. nummer:</label>
                <input class="form-control col-lg-3" maxlength="11" id="phoneNumer" type="tel" placeholder="Tlf. numemr">
                <label class="col-lg-3">E-Mail</label>
                <input class="form-control col-lg-3" id="email" type="email" placeholder="E-Mail">
            </div>
            <div class="row">
                <button class="coll-lg-12">knap test</button>
            </div>
        </form>
    </div>
    <!-- end of information fields row -->
</div>