<div class="row">
    <!-- list row -->
    <div class="col-lg-12">
        <div class="row">
            <label class="col-lg-4">Søg med fornavn</label>
            <input class="col-lg-8" type="text" name="mailSearch" id="mailSearch">
            <button id="searchbtn" onclick="searchName()">adsf</button>
        </div>
        <div class="row">
        <select class="input-medium col-lg-12" size="10" id="userList">

            <!-- list row -->
            <div class="col-lg-6">
                <select class="input-medium" size="10" id="profileList">
                    <option value="1">Item #1</option>
                    <option value="2">Item #2</option>
                    <option value="3">Item #3</option>
                    <option value="4">Item #4</option>
                    <option value="5">Item #5</option>
                    <option value="6">Item #6</option>
                    <option value="7">Item #7</option>
                </select>
            </div>
            <!-- end of list row -->

            <!-- information fields row -->
            <div class="col-lg-6">
                <form method="put" action="/userprofiles">
                    <div class="row">
                        <label class="col-lg-3">Fornavn: </label>
                        <input class="form-control col-lg-3" id="firstName" type="text" placeholder="Fornavn">
                        <label class="col-lg-3">Efternavn: </label>
                        <input class="form-control col-lg-3" id="lastName" type="text" placeholder="Efternavn">
                    </div>

                    <div class="row">
                        <label class="col-lg-3">Alder: </label>
                        <input class="form-control col-lg-3" id="age" type="number" placeholder="Alder" min="0">
                        <label class="col-lg-3">Brugernavn: </label>
                        <input class="form-control col-lg-3" id="username" type="text" placeholder="Brugernavn">
                    </div>
                    <div class="row">
                        <label class="col-lg-3">Adresse:</label>
                        <input class="form-control col-lg-3" id="address" type="text" placeholder="Adresse">
                        <label class="col-lg-3">Bynavn:</label>
                        <input class="form-control col-lg-3" id="cityname" type="text" placeholder="Bynavn">
                    </div>

                    <div class="row">
                        <label class="col-lg-3">Post nr.:</label>
                        <input class="form-control col-lg-3" maxlength="4" id="zipcode" type="number"
                            placeholder="Post nr.">
                        <label class="col-lg-3">Fødselsdato</label>
                        <input class="form-control col-lg-3" id="birthdate" type="date">
                    </div>
                    <div class="row">
                        <input class="col-lg-3" maxlength="11" id="phoneNumer" type="tel" placeholder="Tlf. numemr">
                        <label class="col-lg-3">E-Mail</label>
                        <input class="col-lg-3" id="email" type="email" placeholder="E-Mail">
                    </div>
                    <div class="row">
                        {{# if resetPasswordErr }}
                        {{# each resetPasswordErr }}
                        <p class="alert alert-success">{{this.message}}</p>
                        {{/each}}
                        {{/if}}
                        <button type="submit" class="coll-lg-12 btn btn-danger" id="resetBtn" data-dismiss="Alert">Reset
                            password</button>
                    </div>
                </form>
                <div class="row">
                    <button type="button" class="coll-lg-12 btn btn-primary">knap test</button>
                </div>
            </div>
            <!-- end of information fields row -->

                        <label class="col-lg-3">Tlf. nummer</label>
    </div>
</div>
    <script>
        async function searchName() {

            try {
                const service = await fetch('/userprofiles/' + document.getElementById("mailSearch").value);
                const json = await service.json();
                const list = document.getElementById("userList");
                list.innerHTML ="";
                for (let member of json) {
                    console.log(member);
                    let options = document.createElement('option');
                    options.text = member.firstname + " " + member.lastname;
                    list.appendChild(options);
                    document.execCommand('copy');
                }



            } catch (err) {
                console.log(err);
            }
        }
    </script>
