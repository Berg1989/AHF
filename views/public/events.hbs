<div class="row">
    <div class="col">
        {{#if messages.errors }}
        <div class="alert alert-danger">
            {{#each messages.errors }}
            <span>{{ this.msg }}</span><br>
            {{/each}}
        </div>
        <hr>
        {{/if}}
        {{#if messages.success }}
        <p class="alert alert-success">{{ messages.success }}</p>
        <hr>
        {{/if}}
    </div>
</div>
<h1>Kommende events</h1>
<div class="row">
    <span class="border border-primary">
        <div class="col">
            <div class="form-group">
                <table cellpadding='10' style="width:100%;">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Start Dato</th>
                            <th>Slut Dato</th>
                            <th>Pris</th>
                            <th>GÃ¥ til</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each events }}
                        <tr>
                            <td><a href="/events/{{this.id}}">{{this.headline}}</a></td>
                            <td>{{this.startdate}}</td>
                            <td>{{this.enddate}}</td>
                            <td>{{this.price}}</td>
                            <td>
                                <form method="get" action='events/{{this.id}}'>
                                    <button type="submit" class="btn btn-primary"><i
                                            class="fas fa-angle-right"></i></button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </span>
</div>