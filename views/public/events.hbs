<div class="row">
    <div class="col">
        {{#if success}}
        {{#each success}}
        <p class="alert alert-success">{{this.msg}}</p>
        {{/each}}
        {{/if}}
    </div>
</div>

<h1>Kommende events</h1>

{{#if user}}
<div class="row">
    <span class="border border-primary">
        <div class="col">
            <div class="form-group">
                <table cellpadding='2' style="width:100%;">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Start Dato</th>
                            <th>Slut Dato</th>
                            <th>Pris</th>
                            <th>Tilmeld</th>
                        </tr>
                    </thead>
                    <tbody>

                        {{#each events }}
                        <tr>
                            <td>{{this.headline}}</td>
                            <td>{{this.startdate}}</td>
                            <td>{{this.enddate}}</td>
                            <td>{{this.price}}</td>
                            <td>
                                <form method="POST" onsubmit="return confirm('Vil du tilmelde dig dette event?')"
                                    action='/events/{{this.id}}/signup'>
                                    <button type="submit" class="btn btn-primary"><i class="fas fa-plus"></i></button>
                                </form>
                            </td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </span>
</div>
{{else}}
<div class="row">
    <span class="border border-primary">
        <div class="col">
            <div class="form-group">
                <table cellpadding='2' style="width:100%;">
                    <thead>
                        <tr>
                            <th>Event</th>
                            <th>Start Dato</th>
                            <th>Slut Dato</th>
                            <th>Pris</th>
                        </tr>
                    </thead>
                    <tbody>
                        {{#each events }}
                        <tr>
                            <td>{{this.headline}}</td>
                            <td>{{this.startdate}}</td>
                            <td>{{this.enddate}}</td>
                            <td>{{this.price}}</td>
                        </tr>
                        {{/each}}
                    </tbody>
                </table>
            </div>
        </div>
    </span>
</div>
{{/if}}