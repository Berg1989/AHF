<div class="row">
    <div class="col">
        {{#if messages.errors }}
        <div class="alert alert-danger">
            {{#each messages.errors }}
            <span>{{ this }}</span><br>
            {{/each}}
        </div>
        <hr>
        {{/if}}
        {{#if messages.success }}
        <p class="alert alert-success">{{ messages.success }}</p>
        <hr>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col-md-3">
        {{> userNav}}
    </div>
    <div class="col-md-9">
        <h1>Dine events</h1>
        <hr>
        <div class="row">
            <span class="border border-primary">
                <div class="col">
                    <h3>Kommende events</h3>
                    <div class="form-group">
                        <table cellpadding='2' style="width:100%;">
                            <thead>
                                <tr>
                                    <th>Event</th>
                                    <th>Start Dato</th>
                                    <th>Slut Dato</th>
                                    <th>Pris</th>
                                    <th>Mere</th>
                                    <th>Afmeld</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#each events}}
                                <!--for hvert participant-->
                                <tr>
                                    <td><a href="/events/{{this.id}}">{{this.headline}}</a></td>
                                    <td>{{this.startdate}}</td>
                                    <td>{{this.enddate}}</td>
                                    <td>{{this.price}}</td>
                                    <td>
                                        <form method="get" action='/events/{{this.id}}'>
                                            <button type="submit" class="btn btn-primary"><i
                                                    class="fas fa-angle-right"></i></button>
                                        </form>
                                    </td>
                                    <td>
                                        <form method="POST"
                                            onsubmit="return confirm('Vil du framelde dig dette event?')"
                                            action='/user/events/{{this.id}}/remove'>
                                            <button type="submit" class="btn btn-danger"><i
                                                    class="fas fa-times"></i></button>
                                        </form>
                                    </td>
                                </tr>
                                {{/each}}
                            </tbody>
                        </table>
                    </div>
                </div>
            </span>
        </div>
    </div>
</div>