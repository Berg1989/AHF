<div class="row">
  <div class="col">
    {{# if errors }}
    {{# each errors }}
    <p class="alert alert-danger">{{ this.msg }}</p>
    {{/each}}
    {{/if}}
  </div>
</div>
<div class="row">
  <div class="col">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h1>Registrer ny bruger</h1>
      </div>
      <div class="panel-body">
        <form method="post" action="/register">
          <div class="form-group">
            <label class="col-md-4">Email<font color="red">*</font></label>
            <input type="email" class="form-control" name="email" value="{{email}}" />
          </div>
          <div class="form-group">
            <label class="col-md-4">Password<font color="red">*</font></label>
            <input type="password" class="form-control" name="password" />
          </div>
          <div class="form-group">
            <label class="col-md-4">Fornavn<font color="red">*</font></label>
            <input type="text" class="form-control" name="firstname" value="{{firstname}}" />
          </div>
          <div class="form-group">
            <label class="col-md-4">Efternavn<font color="red">*</font></label>
            <input type="text" class="form-control" name="lastname" value="{{lastname}}" />
          </div>
          <div class="form-group">
            <button type="submit" class="btn btn-primary">Registrer</button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>