<div class="row">
    <div class="col">
        <form method="POST" action="/profile/id={{result._id}}/logout">
            <button class="btn btn-primary" type="submit">Logout</button>
        </form>
    </div>
</div>
<div class="row">
    <div class="col">
        {{# if errors }}
        {{# each errors }}
        <p class="alert alert-danger">{{ this.msg }}</p>
        {{/each}}
        {{/if}}
        {{# if success }}
        <p class="alert alert-success">{{ success.msg }}</p>
        {{/if}}
    </div>
</div>
<div class="row">
    <div class="col">
        <div class="panel panel-primary">
            <div class="panel-heading">
                <h2>Bruger info:</h2>
            </div>
            <div class="panel-body">
               <form method="POST" action="/profile/id={{result._id}}/updateinfo">
                    <div class="form-group">
                        <label class="label">Fornavn: (Påkrævet)</label>
                        <input type="text" id="firstname" class="form-control" name="firstname"
                            value="{{result.info.firstname}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">Efternavn: (Påkrævet)</label>
                        <input type="text" id="lastname" class="form-control" name="lastname"
                            value="{{result.info.lastname}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">Fødselsdato</label>
                        <input type="date" id="birth" class="form-control" name="birth" value="{{result.info.birth}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">Tlf:</label>
                        <input type="text" id="phone" class="form-control" name="phone" value="{{result.info.phone}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">Postnummer:</label>
                        <input type="number" id="zipcode" class="form-control" name="zipcode"
                            value="{{result.info.zipcode}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">addresse:</label>
                        <input type="text" id="street" class="form-control" name="street"
                            value="{{result.info.street}}" />
                    </div>
                    <div class="form-group">
                        <label class="label">Email: (Påkrævet)</label>
                        <input type="text" id="email" class="form-control" name="email"
                            placeholder="Nuværende: {{result.email}}" />
                    </div>
                    <div class="form-group">
                        <button type="submit" id="{{result._id}}" class="btn btn-primary">Updater
                            info</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="col">

    </div>
</div>

<script>
    async function updateUserInfo(id) {
        const firstname = document.getElementById('firstname').value;
        const lastname = document.getElementById('lastname').value;
        const birth = document.getElementById('birth').value;
        const phone = document.getElementById('phone').value;
        const zipcode = document.getElementById('zipcode').value;
        const street = document.getElementById('street').value;
        const email = document.getElementById('email').value;

        const msg = { firstname, lastname, birth, phone, zipcode, street, email };

        try {
            const response = await fetch('/profile/id=' + id, {
                method: 'PUT',
                body: JSON.stringify(msg),
                headers: { 'Content-Type': 'application/json' }
            })
            if (response.status >= 400) {
                throw new Error('Failed to fetch');
            } else {
                window.location.reload(true);
            }
        } catch (err) {
            alert('Noget gik galt: ', err);
            console.log(err);
        }
    }
</script>