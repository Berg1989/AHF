<div class="col">
    <div class="row">
        <h3>Profil tilh√∏rende: {{result.info.firstname}} {{result.info.lastname}}</h3>
    </div>
    <div class="row">
        <div class="col">
           <div class="panel panel-primary">
                {{# if errors }}
                {{# each errors }}
                <p class="alert alert-danger">{{ this.msg }}</p>
                {{/each}}
                {{/if}}
                {{# if success }}   
                <p class="alert alert-success">{{ success.msg }}</p>
                {{/if}}
                <div class="panel-heading">
                    <h1>Personlig info:</h1>
                </div>
                <div class="panel-body">
                    <form method="post" action="/profile/{{result._id}}">
                        <div class="form-group">
                            <label class="col-md-4">Fornavn<font color="red">*</font></label>
                            <input type="text" class="form-control" name="firstname" value="{{result.info.firstname}}" />
                        </div>
                        <div class="form-group">
                            <label class="col-md-4">Efternavn<font color="red">*</font></label>
                            <input type="text" class="form-control" name="lastname" value="{{result.info.lastname}}" />
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary">Updater</button>
                        </div>
                    </form>
                </div>
            </div>
            <br>
            <form method="POST" action="/profile/{{result._id}}/logout">
                <button class="btn btn-primary" type="submit">Logout</button>
            </form>
        </div>
    </div>
</div>
</div>